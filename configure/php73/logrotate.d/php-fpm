/leoparx/php*/var/log/php-fpm.log {
    missingok
    sharedscripts
    postrotate
	for i in 56 57 60 70 71 72 73 74; do
	{
		if [ -s /leoparx/php${i}/run/php-fpm${i}.pid ]; then
			kill -USR1 `cat /leoparx/php${i}/run/php-fpm${i}.pid` > /dev/null 2>&1
		elif [ -s /leoparx/php${i}/var/run/php-fpm${i}.pid ]; then
			kill -USR1 `cat /leoparx/php${i}/var/run/php-fpm${i}.pid` > /dev/null 2>&1
		fi
	};
	done;
    endscript
}
